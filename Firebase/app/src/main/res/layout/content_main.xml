<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="github.yvesbenabou.firebase.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/slideButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:text="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_with_border"
        android:textColor="#000000"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/helpButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:text="?"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_with_border"
        android:textColor="#000000"
        android:elevation="4dp"/>

    <!-- ImageView pour afficher l'image temporaire d'info-->


    <ImageView
        android:id="@+id/takeroombubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-32dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/takeroombubble"
        android:visibility="gone"
        tools:visibility="gone" />

    <github.yvesbenabou.firebase.DoorButton
        android:id="@+id/doorbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/door"
        app:fab_showShadow="false"/>

    <github.yvesbenabou.firebase.ConfirmRoomButton
        android:id="@+id/confirmroombutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="146dp"
        android:src="@drawable/confirm"
        android:visibility="gone"
        app:fab_showShadow="false"
        app:fab_colorDisabled="#E90808"
        app:fab_colorNormal="#0ECE0E"
        app:fab_colorPressed="#0ECE0E"
        app:fab_colorRipple="#0ECE0E"
        tools:visibility="gone"/>

    <github.yvesbenabou.firebase.CancelButton
        android:id="@+id/cancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="235dp"
        android:layout_marginBottom="149dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/cancel"
        android:visibility="gone"
        app:fab_showShadow="false"
        app:fab_colorNormal="@android:color/transparent"
        app:fab_colorRipple="@android:color/transparent"
        app:fab_colorPressed="@android:color/transparent"
        tools:visibility="gone"/>

    <github.yvesbenabou.firebase.ModifyButton
        android:id="@+id/modifybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="225dp"
        android:layout_marginBottom="230dp"
        android:src="@drawable/pen"
        android:visibility="gone"
        app:fab_showShadow="false"
        app:fab_colorDisabled="@null"
        app:fab_colorNormal="@android:color/transparent"
        app:fab_colorPressed="@android:color/transparent"
        app:fab_colorRipple="@android:color/transparent"
        tools:visibility="gone"/>

    <EditText
        android:id="@+id/salle_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/modifybutton"
        android:layout_marginLeft="0dp"
        android:layout_alignRight="@id/takeroombubble"
        android:layout_marginRight="120dp"
        android:layout_alignBottom="@id/modifybutton"
        android:layout_marginBottom="115dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:hint="Entrez votre nÂ° de salle"
        android:visibility="gone"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/selected_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Heure"
        android:textSize="18sp"
        android:layout_alignLeft="@id/modifybutton"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="250dp"
        android:textColor="#000000"
        android:visibility="gone"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="1050px"
        android:layout_height="1900px"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/school_map1" />

    <Button
        android:id="@+id/s1101"
        android:layout_width="92px"
        android:layout_height="58px"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="620px"
        android:layout_marginTop="1552px"
        android:background="#000000"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/dispo_salle"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>